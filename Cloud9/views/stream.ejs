<!DOCTYPE html>
<html lang="en">
<head></head>
<body>
<script>

(async () => {
  const response = await fetch("/stream");

  if (!response.ok) {
    throw Error(response.status);
  }

  for (const reader = response.body.getReader();;) {
    const {value, done} = await reader.read();

    if (done) {
      break;
    }

    document.body.innerText = new TextDecoder().decode(value);
  }
})();

</script>
